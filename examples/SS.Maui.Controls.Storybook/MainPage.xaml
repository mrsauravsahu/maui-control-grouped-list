<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:rating_input="clr-namespace:SS.Maui.Controls.RatingInput;assembly=SS.Maui.Controls.RatingInput"
             x:Class="SS.Maui.Controls.Storybook.MainPage">

    <ScrollView>
        <Grid Padding="8"
              ColumnDefinitions="*,*"
              RowDefinitions="auto,auto">

            <Label Text="RatingInput"
                   FontSize="Title"
                   FontFamily="OpenSansBold"
                   FontAttributes="Bold"
                   Margin="0,0,0,8"/>

            <rating_input:RatingInput Grid.Row="1"
                                      CurrentRating="0" />
        </Grid>
    </ScrollView>

</ContentPage>
